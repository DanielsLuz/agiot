<div class="tab-pane fade" id="situation">
  <div class="tab-pane fade active in" id="loan">
    <div class="loan-form center">
      <div class="panel panel-warning">
        <div class="panel-heading">
          Seus empréstimos
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>Valor pego</th>
                <th>Situação</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @current_user.ordered_loans.each do |loan| %>
                <tr>
                  <td><%= loan.value  %></td>
                  <td><%= loan.paid_text  %></td>
                  <td>
                    <% if !loan.paid %>
                      <%= button_to "Pagar!", pay_loan_path(loan.id),
                        class: 'btn btn-success btn-sm' %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
